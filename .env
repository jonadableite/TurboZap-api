# ===========================================
# TurboZap API - Configuração de Ambiente
# ===========================================
# Copie este arquivo para .env e configure os valores

# -----------------
# Servidor
# -----------------
PORT=8080
HOST=0.0.0.0
APP_ENV=development

# -----------------
# API Key Global (Master Key)
# -----------------
# Chave mestra para autenticação global da API
# Gere uma chave segura: openssl rand -hex 32
API_KEY=your-secure-api-key-here

# -----------------
# PostgreSQL
# -----------------
DATABASE_URL=postgres://turbozap:turbozap@localhost:5432/turbozap?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=turbozap
DB_PASSWORD=turbozap
DB_NAME=turbozap
DB_SSL_MODE=disable

# -----------------
# Webhook
# -----------------
# Timeout para requisições de webhook (em segundos)
WEBHOOK_TIMEOUT=30
# Número máximo de tentativas de retry
WEBHOOK_MAX_RETRIES=3

# -----------------
# WhatsApp / whatsmeow
# -----------------
# Tempo de espera para QR Code (em segundos)
WA_QR_TIMEOUT=60

# Log level do whatsmeow (DEBUG, INFO, WARN, ERROR)
WA_LOG_LEVEL=INFO

# -----------------
# Logs
# -----------------
# Nível de log: debug, info, warn, error
LOG_LEVEL=info
# Formato: json, console
LOG_FORMAT=json

# -----------------
# CORS
# -----------------
# Origens permitidas (separadas por vírgula)
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Origin,Content-Type,Accept,Authorization,X-Api-Key

# -----------------
# Rate Limiting (opcional)
# -----------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -----------------
# Docker Compose (para desenvolvimento local)
# -----------------
POSTGRES_USER=turbozap
POSTGRES_PASSWORD=turbozap
POSTGRES_DB=turbozap
