# ===========================================
# TurboZap API - Configuração de Ambiente
# ===========================================
# Copie este arquivo para .env e configure os valores

# -----------------
# Servidor
# -----------------
PORT=8080
HOST=0.0.0.0
APP_ENV=development

# -----------------
# API Key Global (Master Key)
# -----------------
# Chave mestra para autenticação global da API
# Gere uma chave segura: openssl rand -hex 32
API_KEY=6A4F8E34A2F41D2B9E8B52F63E3C8A1

# -----------------
# PostgreSQL
# -----------------
#volta banco de produção turboapi
DATABASE_URL=postgres://thunderapi:thunderapi@vglu8d.easypanel.host:5432/waveapi?sslmode=disable
DB_HOST=vglu8d.easypanel.host
DB_PORT=5432
DB_USER=thunderapi
DB_PASSWORD=thunderapi
DB_NAME=waveapi
DB_SSL_MODE=disable

# -----------------
# Webhook
# -----------------
# Timeout para requisições de webhook (em segundos)
WEBHOOK_TIMEOUT=30
# Número máximo de tentativas de retry
WEBHOOK_MAX_RETRIES=3

# -----------------
# WhatsApp / whatsmeow
# -----------------
# Tempo de espera para QR Code (em segundos)
WA_QR_TIMEOUT=60

# Log level do whatsmeow (DEBUG, INFO, WARN, ERROR)
WA_LOG_LEVEL=INFO

# -----------------
# Logs
# -----------------
# Nível de log: debug, info, warn, error
LOG_LEVEL=info
# Formato: json, console
LOG_FORMAT=json

# -----------------
# CORS
# -----------------
# Origens permitidas (separadas por vírgula)
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Origin,Content-Type,Accept,Authorization,X-Api-Key

# -----------------
# Rate Limiting (opcional)
# -----------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -----------------
# Docker Compose (para desenvolvimento local)
# -----------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=c4102143751b6e25d238
POSTGRES_DB=turbozap
POSTGRES_DB=5436

# Webhook Global
WEBHOOK_GLOBAL_ENABLED=false
WEBHOOK_GLOBAL_URL=https://meu-servidor.com/webhook
WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS=false
WEBHOOK_GLOBAL_BASE64=false

# Eventos habilitados
WEBHOOK_EVENTS_QRCODE_UPDATED=true
WEBHOOK_EVENTS_MESSAGES_UPSERT=true
WEBHOOK_EVENTS_CONNECTION_UPDATE=true
WEBHOOK_EVENTS_GROUPS_UPSERT=true