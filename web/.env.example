# ============================================
# TurboZap Web - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgres://user:password@host:port/database?sslmode=disable
# Example: postgres://postgres:password@localhost:5432/turbozap?sslmode=disable
DATABASE_URL=postgres://user:password@localhost:5432/turbozap?sslmode=disable

# ============================================
# Better Auth Configuration
# ============================================
# Secret key for Better Auth token signing
# Generate a secure random string (minimum 32 characters)
# You can generate one with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters-long

# Better Auth base URL (server-side)
# In development: http://localhost:3000
# In production: https://yourdomain.com
BETTER_AUTH_URL=http://localhost:3000

# Better Auth base URL (client-side, public)
# Must match BETTER_AUTH_URL in production
# In development: http://localhost:3000
# In production: https://yourdomain.com
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# ============================================
# Application URLs
# ============================================
# Application base URL (optional, used as fallback)
# In development: http://localhost:3000
# In production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# TurboZap API URL
# In development: http://localhost:8080
# In production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8080

# ============================================
# Node Environment
# ============================================
# Set to production when deploying
# Leave as development for local development
NODE_ENV=development
